@model MaharaFinalVersion.Models.Session

<div class="session-form-page">
    <div class="container">
        <link rel="stylesheet" href="~/css/SessionForm.css" />

        <!-- Page Header -->
        <div class="page-header">
            <span class="page-badge">إنشاء جلسة جديدة</span>
            <h1 class="page-title">جلسة جديدة</h1>
        </div>

        <!-- Form Card -->
        <div class="form-card">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label>العنوان</label>
                    <input asp-for="Title" class="form-control" placeholder="أدخل عنوان الجلسة" required />
                </div>

                <div class="form-group">
                    <label>المهارة</label>
                    <select asp-for="Skill" class="form-control" required>
                        <option value="">اختر المهارة</option>
                        <option value="Technical">تقنية</option>
                        <option value="Non-Technical">غير تقنية</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>الوصف</label>
                    <textarea asp-for="Description" class="form-control" placeholder="أدخل وصف الجلسة" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary mt-3">إنشاء الجلسة</button>
            </form>
        </div>
    </div>
</div>
