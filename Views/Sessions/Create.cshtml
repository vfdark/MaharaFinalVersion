@model MaharaFinalVersion.Models.Session

<h2>إنشاء جلسة جديدة</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>العنوان</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label>المهارة</label>
        <select asp-for="Skill" class="form-control" required>
            <option value="Technical">تقنية</option>
            <option value="Non-Technical">غير تقنية</option>
        </select>
    </div>

    <div class="form-group">
        <label>الوصف</label>
        <textarea asp-for="Description" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-success mt-2">إنشاء الجلسة</button>
</form>
