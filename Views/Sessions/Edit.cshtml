@model MaharaFinalVersion.Models.Session

<h2>تعديل الجلسة</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>العنوان</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label>المهارة</label>
        <select asp-for="Skill" class="form-control">
            <option value="Technical" selected="@Model.Skill == "Technical"">تقنية</option>
            <option value="Non-Technical" selected="@Model.Skill == "Non-Technical"">غير تقنية</option>
        </select>
    </div>

    <div class="form-group">
        <label>الوصف</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-2">حفظ التعديلات</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">إلغاء</a>
</form>
