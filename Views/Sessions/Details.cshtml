@model MaharaFinalVersion.Models.Session

<div class="details-page">
    <div class="container">
        <link rel="stylesheet" href="~/css/SessionDetails.css" />

        <!-- Page Header -->
        <div class="page-header">
            <span class="page-badge">تفاصيل الجلسة</span>
            <h1 class="page-title">@Model.Title</h1>
        </div>

        <!-- Session Card -->
        <div class="card session-details-card p-3">
            <p><strong>العنوان:</strong> @Model.Title</p>
            <p><strong>المهارة:</strong> @(Model.Skill == "Technical" ? "تقنية" : "غير تقنية")</p>
            <p><strong>الوصف:</strong> @Model.Description</p>
            <p><strong>أنشأها:</strong> @Model.Creator.FullName</p>
            <p><strong>تاريخ الإنشاء:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">تعديل</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">حذف</a>
            <a asp-action="Index" class="btn btn-secondary">العودة إلى جلساتي</a>
        </div>
    </div>
</div>
